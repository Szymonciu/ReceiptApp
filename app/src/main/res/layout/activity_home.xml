<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <Button
        android:id="@+id/add_receipt"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Add Receipt"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/list_of_receipt"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_receipt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="List Of Receipt"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:drawableBottom="@drawable/ic_info" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:layout_above="@id/add_receipt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:layout_marginBottom="40dp"
        android:text="Receipt App" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="by Fishu&amp;Serek" />
</RelativeLayout>